<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        app:cardCornerRadius="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/heavy">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/heavy"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/loss_weight"
        android:layout_width="244dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="243dp"
        android:text="LOSS WEIGHT"
        android:fontFamily="@font/baloo"
        android:textAppearance="@style/loss_weight"
        android:gravity="top"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loss_weight"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/rakkas"
        android:layout_marginTop="20dp"
        android:text="Lorem ipsum dolor sit amet consectetur. Amet eu mi tempor pellentesque magna laoreet integer massa. Eu purus cras urna et. Nulla eu sem enim sit. Malesuada amet ac justo vestibulum diam fames odio nulla eget."
        android:textAppearance="@style/lorem_ipsum" />
    <Button
        android:id="@+id/get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="GET STARTED"
        android:background="@drawable/getstarted_button"
        android:textAppearance="@style/get_started"
        android:fontFamily="@font/baloo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:padding="18dp"/>

</RelativeLayout>