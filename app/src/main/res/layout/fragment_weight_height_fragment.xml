<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeightHeight_fragment">

    <LinearLayout
        android:id="@+id/weightValue"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/weight"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="126dp"
        android:background="@drawable/rectangle_input"
        android:backgroundTint="#EBE7E7E7"
        android:padding="10dp">

        <EditText
            android:id="@+id/weight_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" EX : 69.6"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/weight"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="80dp"
            android:backgroundTint="#EBE7E7E7"
            android:background="@drawable/rectangle_input"
            android:padding="7dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Kg"
                android:fontFamily="@font/baloo"
                android:textAppearance="@style/loss_weight"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/heightValue"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/weightValue"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@id/height"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="126dp"
        android:background="@drawable/rectangle_input"
        android:backgroundTint="#EBE7E7E7"
        android:padding="10dp">

        <EditText
            android:id="@+id/height_value"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:hint=" EX : 179.2" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/height"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/weight"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="#EBE7E7E7"
        android:background="@drawable/rectangle_input"
        android:padding="10dp"
        >
        <Spinner
            android:id="@+id/heightItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
    </LinearLayout>

</RelativeLayout>